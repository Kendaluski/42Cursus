server {
	#Opened ports && protocols
	listen 443 ssl;
	listen [::]:443 ssl;

	#domain name && certs location
	server_name jjaen-mo.42.fr www.jjaen-mo.42.fr;
	ssl_certificate		/etc/ssl/certs/nginx-selfsigned.crt;
	ssl_certificate_key	/etc/ssl/private/nginx-selfsigned.key;

	# Encrypting protocol for ssl
	ssl_protocols	TLSv1.3;

	# Root directory for nginx web page
	index index.php;
	root /var/www/html;
	
	#Location config for .php files
	location ~ [^/]\\.php(/|$) {
		#if no files match, returns 404
		try_files $uri =404;
		#passes the request to fastcgi server
		fastcgi_pass wordpress:9000
		#iclude a file with fastcgi params
		include fastcgi_params;
		#sets the fastcgi params
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
	}
}